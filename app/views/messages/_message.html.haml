.message
  .message__upper-info
    .message__upper-info--talker
      = message.user.name
    .message__upper-info--date
      = message.created_at.strftime("%Y年%m月%d日　%H時%M分")
  .message__text
    - if message.content.present?
      %p.message__text__content
        = message.content
    = image_tag message.image.url, class: 'message__text--image' if message.image.present?